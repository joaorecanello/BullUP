<script>
    function loadGraficos() {
        var donutChartCanvas = $('#donutChart').get(0).getContext('2d')
        var donutData = {
            labels: [
                'Ações',
                'Fundos Imobiliários',
                'Renda Fixa'
            ],
            datasets: [
                {
                    data: [23, 8, 68],
                    backgroundColor: ['#48887a', '#00aa5a', '#9dd3af'],
                }
            ]
        }

        var donutOptions = {
            maintainAspectRatio: false,
            responsive: true,
        }
